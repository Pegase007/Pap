{% extends "BackBundle::layout.html.twig" %}


{% block content %}
    {% for message in app.session.flashbag.get("success") %}

        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <h4>	<i class="icon fa fa-check"></i> Yay!</h4>
            {{ message }}
        </div>

    {% endfor %}

    {% for offer in offers %}
    <div class="panel">
        <div class="panel-body pn">
            <div class="table-responsive">
                <table class="table admin-form theme-warning tc-checkbox-1 fs13">
                    <thead>
                    <tr class="bg-light">
                        <th class="text-center">Select</th>
                        <th class="">Image</th>
                        <th class="">Title</th>
                        <th class="">City CP</th>
                        <th class="">Ref</th>
                        <th class="">Price</th>
                        <th class="">Energy</th>
                        <th class="">Rooms</th>
                        <th class="">BdRooms</th>
                        <th class="text-right"></th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="text-center">
                            <label class="option block mn">
                                <input type="checkbox" name="mobileos" value="FR">
                                <span class="checkbox mn"></span>
                            </label>
                        </td>

                        <td class=""></td>
                        <td class="">{{ offer.price }}</td>
                        <td class="">{{ offer.title }}</td>
                        <td class="">{{ offer.ref }}</td>
                        <td class="">{{ offer.price }}</td>
                        <td class="">{{ offer.energyLabel }}</td>
                        <td class="">{{ offer.nbrooms }}</td>
                        <td class="">{{ offer.bedrooms }}</td>


                        <td class="menu-action">

                            <a href="{{  path("back_announcement_show",{'id':offer.id} ) }}" data-original-title="view" data-toggle="tooltip" data-placement="top" class="btn menu-icon vd_bd-green vd_green">
                                <i class="fa fa-eye"></i>
                            </a>

                                <a href="{{  path("back_announcement_edit",{'id':offer.id} ) }}" data-original-title="edit" data-toggle="tooltip" data-placement="top" class="btn menu-icon vd_bd-yellow vd_yellow">
                                    <i class="fa fa-pencil"></i>
                                </a>

                                <a href="{{  path("back_announcement_delete",{'id':offer.id} ) }}" data-original-title="delete" data-toggle="tooltip" data-placement="top" class="btn menu-icon vd_bd-red vd_red delete">
                                    <i class="fa fa-times"></i>
                                </a>

                        </td>

                    </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endfor %}
{% endblock %}