{%  extends "BackBundle::layout.html.twig" %}
{% block title "Annoucement Edit" %}

{%  block stylesheets %}
    {{ parent() }}
    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset("bundles/back/css/theme.css") }}">

    <!-- Admin Forms CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset("bundles/back/css/admin-forms.css") }}">

{% endblock %}

{% block content %}

    {% for message in app.session.flashbag.get("success") %}

        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <h4>	<i class="icon fa fa-check"></i> Yay!</h4>
            {{ message }}
        </div>

    {% endfor %}


    <div class="admin-form theme-primary mw1000 center-block" style="padding-bottom: 175px;">

    <div class="panel heading-border">

        {{ form_start(editForm,{'attr':{novalidate:"novalidate"}}) }}
        {{ form_errors(editForm) }}

        <div class="panel-body bg-light">

            <div class="section-divider mt20 mb40">
                <span> Edit Announcement </span>
            </div>
            <!-- .section-divider -->



            <div class="section">
                <label class="field select-multiple">
                    <select name="{{ editForm.user.vars.full_name }}" id="{{ editForm.user.vars.id }}" multiple="" value="{{ editForm.user.vars.value }}">
                        {% for user in editForm.user.children %}
                            <option value="{{ user.vars.value }}">{{ user.vars.label }} </option>
                        {% endfor %}
                    </select>
                </label>
                {{ form_errors(editForm.user) }}

            </div>

            <div class="section row" id="spy1">
                <div class="col-md-12">


                    {#{{ dump(editForm) }}#}
                    {#{{ dump(form(editForm.title)) }}#}

                    <label for="{{ editForm.title.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.title.vars.id }}" name="{{ editForm.title.vars.full_name }}" id="{{ editForm.title.vars.id }}" class="gui-input" value="{{ editForm.title.vars.value }}" placeholder="{{ editForm.title.vars.name }}...">
                        <label for="{{ editForm.title.vars.id }}" class="field-icon">
                            <i class="fa fa-user"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.title) -}}
                </div>
                <!-- end section -->
            </div>
            <div class="section row" id="spy1">
                <div class="col-md-6">
                    <label for="{{ editForm.price.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.price.vars.id }}" name="{{ editForm.price.vars.full_name }}" id="{{ editForm.price.vars.id }}" class="gui-input" value="{{ editForm.price.vars.value }}" placeholder="{{ editForm.price.vars.name }}...">
                        <label for="{{ editForm.price.vars.id }}" class="field-icon">
                            <i class="fa fa-usd"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.price) -}}
                </div>


                <div class="col-md-6">
                    <label for="{{ editForm.ref.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.ref.vars.id }}" name="{{ editForm.ref.vars.full_name }}" id="{{ editForm.ref.vars.id }}" class="gui-input" value="{{ editForm.ref.vars.value }}" placeholder="{{ editForm.ref.vars.name }}...">
                        <label for="{{ editForm.ref.vars.id }}" class="field-icon">
                            <i class="fa fa-list-ol"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.ref) -}}
                </div>

                <!-- end section -->
            </div>
            <!-- end .section row section -->

            <div class="section row" id="spy1">
                <div class="col-md-12">

                    <label for="{{ editForm.address.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.address.vars.id }}" name="{{ editForm.address.vars.full_name }}" id="{{ editForm.address.vars.id }}" class="gui-input" value="{{ editForm.address.vars.value }}" placeholder="{{ editForm.address.vars.name }}...">
                        <label for="{{ editForm.address.vars.id }}" class="field-icon">
                            <i class="fa fa-building"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.address) -}}
                </div>
                <!-- end section -->
            </div>
            <div class="section row" id="spy1">
                <div class="col-md-4">
                    <label for="{{ editForm.city.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.city.vars.id }}" name="{{ editForm.city.vars.full_name }}" id="{{ editForm.city.vars.id }}" class="gui-input" value="{{ editForm.city.vars.value }}" placeholder="{{ editForm.city.vars.name }}...">
                        <label for="{{ editForm.city.vars.id }}" class="field-icon">
                            <i class="fa fa-location-arrow"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.city) -}}
                </div>


                <div class="col-md-4">
                    <label for="{{ editForm.cp.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.cp.vars.id }}" name="{{ editForm.cp.vars.full_name }}" id="{{ editForm.cp.vars.id }}" class="gui-input" value="{{ editForm.cp.vars.value }}" placeholder="{{ editForm.cp.vars.name }}...">
                        <label for="{{ editForm.cp.vars.id }}" class="field-icon">
                            <i class="fa fa-location-arrow"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.cp) -}}
                </div>

                <div class="col-md-4">
                    <label for="{{ editForm.country.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.country.vars.id }}" name="{{ editForm.country.vars.full_name }}" id="{{ editForm.country.vars.id }}" value="{{ editForm.country.vars.value }}" class="gui-input" placeholder="{{ editForm.country.vars.name }}...">
                        <label for="{{ editForm.country.vars.id }}" class="field-icon">
                            <i class="fa fa-location-arrow"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.country) -}}
                </div>

                <!-- end section -->
            </div>


            <div class="section row" id="spy1">
                <div class="col-md-10">
                    <label class="field select">
                        <select id="language" name="language">
                            <option value="">Type...</option>
                            <option value="EN">English</option>
                            <option value="FR">French</option>
                            <option value="SP">Spanish</option>
                            <option value="CH">Chinese</option>
                            <option value="JP">Japanese</option>
                        </select>
                        <i class="arrow double"></i>
                    </label>
                </div>
                <div class="col-md-2">
                    <label for="{{ editForm.energyLabel.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.energyLabel.vars.id }}" name="{{ editForm.energyLabel.vars.full_name }}" id="{{ editForm.energyLabel.vars.id }}" class="gui-input" value="{{ editForm.energyLabel.vars.value }}" placeholder="{{ editForm.energyLabel.vars.name }}...">
                        <label for="{{ editForm.energyLabel.vars.id }}" class="field-icon">
                            <i class="fa fa-bolt"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.energyLabel) -}}
                </div>

            </div>
            <!-- end section -->

            <div class="section row" id="spy1">
                <div class="col-md-4">
                    <label for="{{ editForm.surface.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.surface.vars.id }}" name="{{ editForm.surface.vars.full_name }}" id="{{ editForm.surface.vars.id }}" class="gui-input" value="{{ editForm.surface.vars.value }}" placeholder="{{ editForm.surface.vars.name }}...">
                        <label for="{{ editForm.surface.vars.id }}" class="field-icon">
                            <i class="fa fa-home"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.surface) -}}
                </div>


                <div class="col-md-4">
                    <label for="{{ editForm.nbrooms.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.nbrooms.vars.id }}" name="{{ editForm.nbrooms.vars.full_name }}" id="{{ editForm.nbrooms.vars.id }}" class="gui-input" value="{{ editForm.nbrooms.vars.value }}" placeholder="{{ editForm.nbrooms.vars.name }}...">
                        <label for="{{ editForm.nbrooms.vars.id }}" class="field-icon">
                            <i class="fa fa-home"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.nbrooms) -}}
                </div>

                <div class="col-md-4">
                    <label for="{{ editForm.bedrooms.vars.id }}" class="field prepend-icon">
                        <input type="text" id="{{ editForm.bedrooms.vars.id }}" name="{{ editForm.bedrooms.vars.full_name }}" id="{{ editForm.bedrooms.vars.id }}" class="gui-input" value="{{ editForm.bedrooms.vars.value }}" placeholder="{{ editForm.bedrooms.vars.name }}...">
                        <label for="{{ editForm.bedrooms.vars.id }}" class="field-icon">
                            <i class="fa fa-bed"></i>
                        </label>
                    </label>
                    {{- form_errors(editForm.bedrooms) -}}
                </div>

                <!-- end section -->
            </div>


            <div class="section" id="spy2">
                <label for="file1" class="field file">
                    <span class="button btn-primary"> Choose File </span>
                    <input type="file" class="gui-file" name="upload1" id="file1" onChange="document.getElementById('uploader1').value = this.value;">
                    <input type="text" class="gui-input" id="uploader1" placeholder="no file selected" readonly>
                </label>
            </div>
            <!-- end  section -->

            <!-- end  section -->

            <div class="section" id="spy3">
                <label for="{{ editForm.content.vars.id }}" class="field prepend-icon">
                    <label for="comment" class="field prepend-icon">

                        <textarea class="gui-textarea" id="{{ editForm.content.vars.id }}" name="{{ editForm.content.vars.full_name }}" value="{{ editForm.content.vars.value }}" placeholder="Your announcement ..."></textarea>

                    </label>
            </div>
            <!-- end section -->

            <!-- .section-divider -->



            <!-- end .form-body section -->
            <div class="panel-footer text-right">
                <button type="submit" class="button btn-primary"> Edit Form </button>
            </div>
            <!-- end .form-footer section -->
            {{ form_widget(editForm._token) }}

            </form>

        </div>

    </div>

{% endblock %}